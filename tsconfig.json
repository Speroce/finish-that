{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ESNext",
      "noImplicitAny": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "jsx": "react",
      "useDefineForClassFields": true,
      "paths": {
        "*": ["node_modules/*"]
      },
      "skipLibCheck": true
    },
    "include": [
      "src/**/*"
    ],
  }